<!DOCTYPE html>
<html>
<head>
        <title> Company - View All</title>
</head>
    <body>
        <h1>Companies</h1>

        <table border = "1">
            <tr>
                <th>Name</th>
                <th>Actions</th>
                <th>Delete</th>
            </tr>
            <% for(var i = 0; companies.length > i; i++) {%>
            <tr>
                <td>
                       <%= companies[i].company_name %>
                </td>
                <td>
                    <a href = '/company/edit/?company_id=<%= companies[i].company_id%>'>
                        Edit
                    </a>
                </td>
                <td>
                    <a href = '/company/delete/?company_id=<%= companies[i].company_id%>'>
                        Delete
                    </a>
                </td>
            </tr>

            <% } %>
        </table>
    </body>
</html>